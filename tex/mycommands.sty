% inline code
\newcommand{\code}[1]{\lstinline[language = Python]{#1}}

% color links blue
\newcommand{\link}[2]{\textcolor{blue}{\href{#1}{#2}}}

% for referencing a py file directly
\newcommand{\pyfile}[1]{
\lstinputlisting[title = \hspace{\textwidth} \scalebox{.67}{\texttt{#1}}]{python/#1}}

\newcommand{\pyfiletoc}[1]{
\lstinputlisting[caption = {[#1]}, title = \hspace{\textwidth} \scalebox{.7}{\texttt{#1}}]{python/#1}}



